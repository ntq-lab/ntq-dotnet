<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->

  <variable name="LogFolder" value="D:\logs" />

  <!-- Variable for Debugger console log -->
  <variable name="DebuggerLayout" value="${date:format=yyyy\/MM\/dd hh\:mm\:ss} ${uppercase:${level}} ${logger} ${message}"/>

  <!-- Variable for Error file log -->
  <variable name="ErrorLayout" value="${date:format=yyyy\/MM\/dd hh\:mm\:ss} ${message}"/>
  <variable name="ErrorLogFile" value="NLogAdapterTest_error_${date:format=yyyyMMdd}.log" />

  <!-- Variable for Debug file log -->
  <variable name="DebugLayout" value="${date:format=yyyy\/MM\/dd hh\:mm\:ss.fff} ${uppercase:${level}} ${message} ${exception:format=tostring}"/>
  <variable name="DebugLogFile" value="NLogAdapterTesti_debug_${date:format=yyyyMMdd}.log" />

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <!-- file targets -->
    <target name="Debugger" xsi:type="Debugger" layout="${DebuggerLayout}"/>

    <target name="ErrorLog" xsi:type="AsyncWrapper" queueLimit="5000" batchSize="10" overflowAction="Block">
      <target xsi:type="File"
				    fileName="${LogFolder}/${ErrorLogFile}"
				    layout="${ErrorLayout}" />
    </target>

    <target name="DebugLog" xsi:type="AsyncWrapper" queueLimit="5000" batchSize="10" overflowAction="Block">
      <target xsi:type="File"
			      fileName="${LogFolder}/${DebugLogFile}"
			      layout="${DebugLayout}" />
    </target>
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
    <logger name="*" minlevel="Debug" writeTo="Debugger" enabled="true"/>
    <logger name="*" minlevel="Error" writeTo="ErrorLog" enabled="true"/>
    <logger name="*" level="Debug" writeTo="DebugLog" enabled="true"/>
  </rules>
</nlog>
